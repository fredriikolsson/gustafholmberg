<div class="w-1/2 flex flex-col justify-self-center">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col w-2/5 gap-4">
      <%= render 'layouts/form/input_field', form: f, field: :email, input_type: :email_field, autofocus: true, autocomplete: "email"  %>

      <%= render 'layouts/form/input_field', form: f, field: :password, input_type: :password_field, autocomplete: "current-password"  %>

      <% if devise_mapping.rememberable? %>
        <div class="flex flex-row">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'rounded bg-blue-400 text-white px-3 py-2' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
